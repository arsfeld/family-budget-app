# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/family_budget"

# Authentication
AUTH_SECRET="your-secret-key-here-generate-with-just-gen-secret"
NEXTAUTH_URL="http://localhost:3000"

# Application
NODE_ENV="development"
PORT="3000"

# AI Features (optional - choose one or multiple providers)
# OPENAI_API_KEY="sk-..."
# ANTHROPIC_API_KEY="sk-ant-..."
# GROQ_API_KEY="gsk_..."
# GOOGLE_GENERATIVE_AI_API_KEY="your-google-ai-key" # Free tier available

# AI Configuration
AI_PROVIDER="google" # Options: openai, anthropic, groq, google
AI_MODEL="gemini-1.5-flash" # Default model to use (gemini-1.5-flash is free tier)
AI_RATE_LIMIT_PER_MINUTE="20"
AI_MAX_TOKENS="2000"
AI_TEMPERATURE="0.7"

# Storage & Backups (optional)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# S3_BUCKET="family-budget-backups"
# AWS_REGION="us-east-1"

# Email (optional, for notifications)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# EMAIL_FROM="noreply@familybudget.app"

# Monitoring (optional)
# SENTRY_DSN="your-sentry-dsn"

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_EMAIL_NOTIFICATIONS="false"